<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="javio.com.nytimessearch.fragments.SearchSettingFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:padding="@dimen/item_title_padding"
            android:text="@string/beginDate"
            android:textAlignment="center"
            android:textColor="@color/item_title"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvBeginDateSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBeginDate"
            android:layout_centerHorizontal="true"
            android:hint="@string/beginDate"
            android:textAlignment="center"
            android:padding="@dimen/item_title_padding"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ibBeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBeginDateSetting"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_calendar_24" />

        <TextView
            android:id="@+id/tvSortOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBeginDateSetting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/sortOrder"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/item_title"
            android:textStyle="normal|bold" />

        <Spinner
            android:id="@+id/spSortOrder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSortOrder"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvNewsDesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spSortOrder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/newsDeskValues"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@color/item_title" />

        <CheckBox
            android:id="@+id/cbArts"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewsDesk"
            android:layout_centerHorizontal="true"
            android:text="Arts"
            android:padding="@dimen/itemMargin" />

        <CheckBox
            android:id="@+id/cbFashion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbArts"
            android:layout_centerHorizontal="true"
            android:text="Fashion Style"
            android:padding="@dimen/itemMargin" />

        <CheckBox
            android:id="@+id/cbSports"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbFashion"
            android:layout_centerHorizontal="true"
            android:text="Sports"
            android:padding="@dimen/item_title_padding" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:text="@string/save"
            android:background="@color/item_title"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light" />
    </RelativeLayout>
</FrameLayout>
