<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="javio.com.nytimessearch.fragments.SearchSettingFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvBeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="@string/beginDate"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvBeginDateSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBeginDate"
            android:layout_centerHorizontal="true"
            android:hint="@string/beginDate"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/ibBeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvBeginDateSetting"
            android:layout_toEndOf="@+id/tvBeginDateSetting"
            android:layout_toRightOf="@+id/tvBeginDateSetting"
            android:background="@drawable/ic_calendar_24" />

        <TextView
            android:id="@+id/tvSortOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBeginDateSetting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="@string/sortOrder"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spSortOrder"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSortOrder"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvNewsDesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spSortOrder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/newsDeskValues" />

        <CheckBox
            android:id="@+id/cbArts"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewsDesk"
            android:layout_centerHorizontal="true"
            android:text="Arts" />

        <CheckBox
            android:id="@+id/cbFashion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbArts"
            android:layout_centerHorizontal="true"
            android:text="Fashion Style" />

        <CheckBox
            android:id="@+id/cbSports"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbFashion"
            android:layout_centerHorizontal="true"
            android:text="Sports" />

        <Button
            android:id="@+id/btSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spSortOrder"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/spSortOrder"
            android:layout_marginBottom="20dp"
            android:text="@string/save" />

    </RelativeLayout>
</FrameLayout>
